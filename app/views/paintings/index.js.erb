<% if @is_filtering %>
$('#paintings-container').html('');
<% end %>

$('#paintings-container').append('<%= j render @paintings %>');

<% if @paintings.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @paintings %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>

