$('#paintings-container').append('<%= j render @paintings %>');

<% if @paintings.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @paintings %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>

// MASONRY 를 파괴했다 다시 로드한다.
$('#paintings-container').masonry('destroy')
setInterval(function(){
  // masonry 가 원활히 적용되지 않던 이슈 일단 이렇게 적용
  $('#paintings-container').masonry({
    // options
    itemSelector : '.item',
  
  });
})