<% if user_signed_in? && current_user.user_type == "admin" %>
  <div class="container" style="padding-top: 100px;">
    <%= link_to new_magazine_path do %>
      <button type="button" class="btn btn-outline-dark float-right">매거진 등록하기</button>
    <% end %>
  </div>
<% end %>
<!-- Blog Posts -->
<div class="section">
  
  <div class="container text-center">
    
    <div class="blog-masonry blog-column-3"><!-- 'blog-column-1' to 'blog-column-6' -->
      <% @magazines.each do |magazine| %>
        <div class="blog-post-box">
          <div class="blog-post-img">
            <%= link_to magazine_path(magazine) do %>
              <% if magazine.thumbnail.present? %>
                <img src="<%= magazine.thumbnail.url %>" alt="">
              <% end %>
            <% end %>
          </div>

          <div class="blog-post-content text-left">
            <div class="blog-post-title margin-bottom-10">
              <h5>
                <%= link_to magazine_path(magazine) do %>
                  <%= magazine.title %>
                <% end %>
              </h5>
              <span><%= magazine.created_at.strftime("%Y년 %m월 %d일") %></span>
            </div>
            
            <%#= link_to 'Read More', magazine_path(magazine), class: "text-btn margin-top-20" %>
          </div>
        </div>
      <% end %>

      
