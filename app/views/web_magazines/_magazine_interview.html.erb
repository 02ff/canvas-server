<section id="magazine-interview" data-background="white">
    <p class="magazine-section-title">
      Interview
    </p>
    <div class="wrapper">
      <div class="margin-top-50">
        <div class="w-col w-col-5">
          <% interviews_left.each do |interview| %>
            <div class="interview-area">
              <span class="interview-title" style="float: left;">Q.</span>
              <div style="padding-left: 50px;">
                <%= interview.question %>
              </div>
            </div>
            <div class="interview-area">
              <span class="interview-title" style="float: left;">A.</span>
              <div style="padding-left: 50px;">
                <%= interview.answer %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="w-col w-col-2">
          <% if !@is_mobile %>
            <center>
              <img style="height: 300px;" src="/images/spring.png" alt="">
            </center>
          <% end %>
        </div>
        <div class="w-col w-col-5">
          <% interviews_right.each do |interview| %>
            <div class="interview-area">
              <span class="interview-title" style="float: left;">Q.</span>
              <div style="padding-left: 50px;">
                <%= interview.question %>
              </div>
            </div>
            <div class="interview-area">
              <span class="interview-title" style="float: left;">A.</span>
              <div style="padding-left: 50px;">
                <%= interview.answer %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>